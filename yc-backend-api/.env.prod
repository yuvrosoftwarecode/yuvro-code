# Backend Production Environment Variables

# Database Configuration
POSTGRES_DB=yc_app_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure-production-password-change-me

DEBUG=False
SECRET_KEY=production-secret-key-change-me
DATABASE_URL=postgresql://postgres:secure-production-password-change-me@db:5432/yc_app_prod
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Email Configuration (Production)
EMAIL_HOST_USER=your-production-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-production-email-password
DEFAULT_FROM_EMAIL=your-production-email@yourdomain.com

# Frontend Configuration
FRONTEND_URL=https://yourdomain.com

# Google OAuth (Production)
GOOGLE_OAUTH2_CLIENT_ID=your-production-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-production-google-client-secret

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=7

# Security Settings (Production only)
SECURE_SSL_REDIRECT=1
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_HSTS_PRELOAD=1