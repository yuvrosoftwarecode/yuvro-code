# Code Executor Service - Observability Configuration
# This file contains settings for OpenTelemetry tracing and metrics collection

# Enable OpenTelemetry
OTEL_ENABLED=true

# OpenTelemetry Collector endpoint
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# Service identification
OTEL_SERVICE_NAME=yc-code-executor
OTEL_RESOURCE_ATTRIBUTES=service.name=yc-code-executor,service.version=1.0.0,environment=production

# Prometheus metrics (enabled by default)
PROMETHEUS_PORT=9002

# Logging configuration
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
