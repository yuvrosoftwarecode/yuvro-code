{
  "uid": "yc-detailed-metrics",
  "title": "YC Platform Detailed Metrics",
  "tags": [
    "yc-platform",
    "detailed"
  ],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Service Uptime",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=~\"yc-.*\"}",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "Down"
                }
              },
              "type": "value"
            },
            {
              "options": {
                "1": {
                  "text": "Up"
                }
              },
              "type": "value"
            }
          ]
        }
      },
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "HTTP Request Rate (req/sec)",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=~\"yc-.*\"}[5m])",
          "legendFormat": "{{job}} - {{method}} {{status}}"
        }
      ],
      "yAxes": [
        {
          "label": "Requests/sec",
          "min": 0
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 8,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Response Time Percentiles",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=~\"yc-.*\"}[5m]))",
          "legendFormat": "{{job}} - 50th percentile"
        },
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=~\"yc-.*\"}[5m]))",
          "legendFormat": "{{job}} - 95th percentile"
        },
        {
          "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=~\"yc-.*\"}[5m]))",
          "legendFormat": "{{job}} - 99th percentile"
        }
      ],
      "yAxes": [
        {
          "label": "Seconds",
          "min": 0
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 16,
        "y": 0
      }
    },
    {
      "id": 4,
      "title": "Code Execution Metrics",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(code_executions_total[5m])",
          "legendFormat": "{{language}} - {{status}}"
        }
      ],
      "yAxes": [
        {
          "label": "Executions/sec",
          "min": 0
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 6
      }
    },
    {
      "id": 5,
      "title": "Active Code Executions",
      "type": "stat",
      "targets": [
        {
          "expr": "active_code_executions",
          "legendFormat": "Active Executions"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "red",
                "value": 10
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 12,
        "y": 6
      }
    },
    {
      "id": 6,
      "title": "Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "code_execution_memory_bytes / 1024 / 1024",
          "legendFormat": "Memory Usage (MB)"
        }
      ],
      "yAxes": [
        {
          "label": "MB",
          "min": 0
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 18,
        "y": 6
      }
    },
    {
      "id": 7,
      "title": "Error Rate by Service",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=~\"yc-.*\",status=~\"4..|5..\"}[5m]) / rate(http_requests_total{job=~\"yc-.*\"}[5m])",
          "legendFormat": "{{job}} Error Rate"
        }
      ],
      "yAxes": [
        {
          "label": "Error Rate",
          "min": 0,
          "max": 1
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 12
      }
    },
    {
      "id": 8,
      "title": "Database Connections",
      "type": "stat",
      "targets": [
        {
          "expr": "active_connections",
          "legendFormat": "Active DB Connections"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 50
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 12,
        "y": 12
      }
    },
    {
      "id": 9,
      "title": "Top Endpoints by Request Count",
      "type": "table",
      "targets": [
        {
          "expr": "topk(10, sum by (endpoint) (rate(http_requests_total{job=~\"yc-.*\"}[5m])))",
          "format": "table"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 18,
        "y": 12
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}